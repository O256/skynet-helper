{
  "name": "skynet-helper",
  "displayName": "Skynet Helper",
  "description": "A tool to help with Skynet development",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
		"Debuggers"
	],
	"private": true,
	"extensionKind": [
		"workspace"
	],
  "main": "./action/extension.js",
  "activationEvents": [
		"onDebug"
	],
  "keywords": [
    "debugger",
    "lua",
    "skynet"
  ],
  "contributes": {
    "commands": [
      {
        "command": "hello.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "sproto",
        "aliases": [
          "sproto"
        ],
        "extensions": [
          ".sproto"
        ],
        "configuration": "./sproto/language.sproto.json"
      }
    ],
    "grammars": [
      {
        "language": "sproto",
        "scopeName": "source.sproto",
        "path": "./sproto/sproto.tmLanguage"
      }
    ],
    "breakpoints": [
      {
        "language": "lua"
      }
    ],
    "debuggers": [
      {
        "type": "lua",
        "label": "skynet debugger",
        "languages": [
          "lua"
        ],
        "linux": {
          "program": "./bin/sdb"
        },
        "initialConfigurations": [
          {
            "name": "skynet debugger",
            "type": "lua",
            "request": "launch",
            "workdir": "${workspaceFolder}",
            "program": "./skynet",
            "config": "./examples/config_vsc",
            "service": "./service"
          }
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "workdir": {
                "type": "string",
                "description": "Set the work directory",
                "default": "${workspaceFolder}"
              },
              "program": {
                "type": "string",
                "description": "Set the path of skynet program, the path is relative to workdir",
                "default": "./skynet"
              },
              "config": {
                "type": "string",
                "description": "skynet config path",
                "default": "./examples/config_vsc"
              },
              "service": {
                "type": "string",
                "description": "Set the path of skynet service, the path is relative to workdir",
                "default": "./service"
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.34.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}